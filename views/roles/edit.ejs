<% layout('layouts/admin') %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mt-4">Edit Role</h1>
      <div class="card">
        <div class="card-body">
          <form action="/roles/update/<%= role.id %>" method="POST">
            <%- csrfField() %>

            <input type="hidden" name="id" value="<%= role.id %>">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= old('name',role.name) %>">
              <ul>
                <% errors('name').forEach(error => { %>
                <li class="text-danger">
                  <small><%= error %></small>
                </li>
                <% }) %>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/roles" class="btn btn-secondary">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>