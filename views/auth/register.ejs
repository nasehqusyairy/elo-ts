<% layout('layouts/default') %>


<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-3">Register</h5>

        <!-- Alert saat terjadi error server -->
        <% if (messages.error) { %>
        <!-- alert danger -->
        <div class="alert alert-danger">
          <%= messages.error[0] %>
        </div>
        <% } %>

        <form action="/auth/register" method="POST">

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= old('email') %>" required>
            <!-- list error small berwarna merah -->
            <ul>
              <% errors('email').forEach(error => { %>
              <li class="text-danger">
                <small><%= error %></small>
              </li>
              <% }) %>
            </ul>

          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
            <!-- list error small berwarna merah -->
            <ul>
              <% errors('password').forEach(error => { %>
              <li class="text-danger">
                <small><%= error %></small>
              </li>
              <% }) %>
            </ul>
          </div>

          <div class="mb-3">
            <label for="password_confirmation" class="form-label">Password
              Confirmation</label>
            <input type="password" class="form-control" id="password_confirmation" name="password_confirmation" required>
            <!-- list error small berwarna merah -->
            <ul>
              <% errors('password_confirmation').forEach(error => { %>
              <li class="text-danger">
                <small><%= error %></small>
              </li>
              <% }) %>
            </ul>
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>

          <!-- login link -->
          <p class="mt-3">Already have an account? <a href="/auth">Login</a></p>

        </form>
      </div>
    </div>
  </div>
</div>